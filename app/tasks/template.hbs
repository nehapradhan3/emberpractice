
{{outlet}}
<br><br>
{{sort-list dropdownlist=sortlist finalresult=model defaultsort='date'}}
<h2> Tasks</h2>
{{#each model as |tasks index|}}
{{log 'model' tasks}}
<div class="well">

  <h4>{{#link-to 'tasks.edit'tasks.id}}{{tasks.title}}{{/link-to}}</h4>
  <small> Due: {{format-date tasks.date}}</small>
  <p>{{tasks.description}}</p>
  <button {{action 'deleteTasks' tasks.id}} class="btn btn-danger">Delete</button>
</div>

{{/each}}
